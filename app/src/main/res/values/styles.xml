<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Text fields (edit text) styles -->
    <style name="TextFields">
        <item name="android:textColor">#000000</item>
        <!-- <item name="android:typeface">monospace</item> -->
        <item name="android:background">@color/White</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <!-- <item name="android:textStyle">italic</item> -->
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/Hint_color</item>
    </style>


    <!-- initial login and register buttons -->
    <style name="Initial_buttons">
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Action bar custom style -->
    <style name="Theme.MemorytActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:titleTextStyle">@style/MyActionBar.Text</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="titleTextStyle">@style/MyActionBar.Text</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/Light_blue</item>
        <item name="android:titleTextStyle">@style/MyActionBar.Text</item>
        <!-- Support library compatibility -->
        <item name="background">@color/Light_blue</item>
        <item name="titleTextStyle">@style/MyActionBar.Text</item>
    </style>

    <style name="MyActionBar.Text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/White</item>
        <item name="android:text">Home</item>
    </style>


</resources>